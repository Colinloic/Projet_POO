<header class="header bg-secondary" role="banner">
	<button class="collapse-button ml-6" id="showSidebar">
		<svg focusable="false" aria-hidden="true" fill="#fff" height="35" width="35" viewBox="0 0 24 24" aria-label="fontSize large">
			<path d="M4 18h16c.55 0 1-.45 1-1s-.45-1-1-1H4c-.55 0-1 .45-1 1s.45 1 1 1zm0-5h16c.55 0 1-.45 1-1s-.45-1-1-1H4c-.55 0-1 .45-1 1s.45 1 1 1zM3 7c0 .55.45 1 1 1h16c.55 0 1-.45 1-1s-.45-1-1-1H4c-.55 0-1 .45-1 1z"></path>
		</svg>
	</button>
	<nav>
		<a href="{{ path('home') }}" class="logo">
			<img src="{{ asset('static/pokewiki.png') }}" width="123" height="36" alt="logo">
		</a>
		{% if app.user %}
			<p class="text-white mr-auto">Bienvenue <strong>{{ app.user.firstname | capitalize }}</strong></p>
		{% endif %}
		<ul class="collapse-mobile ml-auto">
			{% if app.user %}
				<li><a href="{{ path('pokemon_create') }}">Ajouter un pokémon</a></li>
				<li><a href="{{ path('auth_logout') }}">Déconnexion</a></li>
			{% else %}
				<li><a href="{{ path('auth_signup') }}">Créer un compte</a></li>
				<li><a href="{{ path('auth_login') }}">Connexion</a></li>
			{% endif %}
		</ul>
	</nav>
</header>