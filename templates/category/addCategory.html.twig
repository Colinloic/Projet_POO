{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
    {{ form_start(form,{ 'attr': {'class': 'flex flex-col mt-5 p-5 w-3/4 m-auto'}}) }}
    <div class="flex flex-col mb-3">
        {{ form_label(form.name, null, { 'label': 'Nom : ', 'label_attr': {'class': 'mb-1 font-medium required'} }) }}
        {{ form_widget(form.name, { 'attr': {'class': 'text-lg py-2 px-3.5 rounded-2xl shadow-md outline-none'} }) }}
    </div>
    <div class="flex flex-col mb-3">
        {{ form_label(form.url, null, { 'label': 'Url : ', 'label_attr': {'class': 'mb-1 font-medium required'} }) }}
        {{ form_widget(form.url, { 'attr': {'class': 'text-lg py-2 px-3.5 rounded-2xl shadow-md outline-none' } }) }}
    </div>
    <div class="flex flex-col mb-3">
        {{ form_label(form.logo_url, null, { 'label': 'logo : ', 'label_attr': {'class': 'mb-1 font-medium required'} }) }}
        {{ form_widget(form.logo_url, { 'attr': {'class': 'text-lg py-2 px-3.5 rounded-2xl shadow-md outline-none' } }) }}
    </div>
    {{ form_row(form.save, {
        label: 'Créer la catégorie',
        'attr': {'class': ' h-10 bg-primary px-3 color-secondary font-semibold rounded-2xl shadow-md hover:bg-blue hover:text-yellow transition-colors duration-300'}
    }) }}
{% endblock %}