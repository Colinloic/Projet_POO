   </div>
   <div class="flex flex-col mb-3">
      {{ form_label(form.image_url, null, { 'label': 'logo : ', 'label_attr': {'class': 'mb-1 font-medium required'} }) }}
      {{ form_widget(form.image_url, { 'attr': {'class': 'text-lg py-2 px-3.5 rounded-2xl shadow-md outline-none' } }) }}
   </div>

   {{ form_row(form.save, {
      label: 'Créer le pokémon',
       'attr': {'class': ' h-10 bg-primary px-3 color-secondary font-semibold rounded-2xl shadow-md hover:bg-blue hover:text-yellow transition-colors duration-300'}
   }) }}

{% endblock %}


