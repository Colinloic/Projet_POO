   </div>
   <div class="flex flex-col mb-3">
      {{ form_label(form.attitude, null, { 'label': 'Attitude : ', 'label_attr': {'class': 'mb-1 font-medium required'} }) }}
      {{ form_widget(form.attitude, { 'attr': {'class': 'text-lg py-2 px-3.5 rounded-2xl shadow-md outline-none'} }) }}
   </div>
   <div class="flex flex-col mb-3">
      {{ form_label(form.differences, null, { 'label': 'différences : ', 'label_attr': {'class': 'mb-1 font-medium required'} }) }}
